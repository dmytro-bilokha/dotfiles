<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 http://maven.apache.org/xsd/settings-1.0.0.xsd">

    <profiles>
	<profile>
	    <id>wildfly-local</id>
	    <properties>
		<wildfly-home>/usr/local/wildfly-9.0.1</wildfly-home>
		<wildfly-hostname>127.0.0.1</wildfly-hostname>
		<wildfly-port>9990</wildfly-port>
		<wildfly-username>adminlogin</wildfly-username>
		<wildfly-password>adminpassword</wildfly-password>
	    </properties>
	</profile>

    </profiles>

    <activeProfiles>
	<activeProfile>wildfly-local</activeProfile>
    </activeProfiles>

    <servers>

	<server>
	    <id>tomcat-local</id>
	    <username>adminlogin</username>
	    <password>adminpassword</password>
	</server>

    </servers>

</settings>
